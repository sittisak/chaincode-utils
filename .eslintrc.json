{
    "env": {
        "browser": false,
        "node": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": [
            "error", 
            { 
                "allow": [
                    "info", 
                    "warn", 
                    "error"
                ]
             }
        ],
        "no-constant-condition": [
            "error", 
            { 
                "checkLoops": false 
            }
        ]
    }
}